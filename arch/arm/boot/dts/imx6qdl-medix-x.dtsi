#include <dt-bindings/clock/imx6qdl-clock.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	aliases {
		backlight_lvds = &backlight;
		fb_lvds = &lvds_panel;
		t_lvds = "/panel/panel-timing";
		ldb = &ldb;
	};

	chosen {
		stdout-path = &uart1;
	};

	memory@10000000 {
		reg = <0x10000000 0x40000000>;
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_usb_h1_vbus: regulator@1 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "usb_h1_vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_usbhub_reset>; /* smsc2415 reset */
			gpio = <&gpio1 5 0>;
			enable-active-high;
			startup-delay-us = <2000>;
			status = "okay";
		};

		reg_3v3: regulator@2 {
			compatible = "regulator-fixed";
			regulator-name = "3P3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};

		reg_1v3: regulator@3 {
			compatible = "regulator-fixed";
			regulator-name = "1P3V";
			regulator-min-microvolt = <1300000>;
			regulator-max-microvolt = <1300000>;
			regulator-always-on;
		};
	};

	backlight: backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm1 0 1000000>;
		brightness-levels = <0 4 8 16 32 64 128 255>;
		default-brightness-level = <7>;
		pinctrl-0 = <&pinctrl_bkl>;
		backlight-enable-gpios = <&gpio1 30 0>;
		display-enable-gpios = <&gpio3 13 0>;
		pwm-on-delay-ms = <150>;
		pwm-off-delay-ms = <50>;
		display-hold-off-ms = <20>;
		status = "okay";
	};

	lvds_panel: panel {
		compatible = "christ,c-wxga", "panel-lvds";
		backlight = <&backlight>;

		width-mm = <261>;
		height-mm = <163>;

		data-mapping = "jeida-24";

		panel-timing {
			/* 1280x800 @58Hz */
			clock-frequency = <58339629>;
			hactive = <1280>;
			vactive = <800>;
			hsync-len = <40>;
			hfront-porch = <64>;
			hback-porch = <64>;
			vsync-len = <6>;
			vfront-porch = <5>;
			vback-porch = <5>;
		};

		port {
			panel_in: endpoint {
				remote-endpoint = <&lvds0_out>;
			};
		};
	};

	sound {
		compatible = "fsl,imx6qdl-medix-xx-sgtl5000",
			     "fsl,imx-audio-sgtl5000";
		model = "imx6q-medix-xx-sgtl5000";
		ssi-controller = <&ssi2>;
		audio-codec = <&codec>;
		audio-routing =
			"MIC_IN", "Mic Jack",
			"Ext Spk", "LINE_OUT";
		mux-int-port = <2>;
		mux-ext-port = <3>;
	};

	gpio-leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_front_leds>;

		led-start {
			label = "medix:start";
			gpios = <&gpio3 6 0>;
			default-state = "off";
		};

		led-stop {
			label = "medix:stop";
			gpios = <&gpio3 7 0>;
			default-state = "off";
		};

		led-power {
			label = "medix:power";
			gpios = <&gpio3 8 0>;
			linux,default-trigger = "heartbeat";
		};
	};

	pwm-leds {
		compatible = "pwm-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_pwm_rgbstatus>;

		red {
			label = "medix:status:red";
			pwms = <&pwm2 0 50000>;
			max-brightness = <100>;
			initial-brightness = <0>;
		};

		green {
			label = "medix:status:green";
			pwms = <&pwm3 0 50000>;
			max-brightness = <100>;
			initial-brightness = <0>;
		};

		blue {
			label = "medix:status:blue";
			pwms = <&pwm4 0 50000>;
			max-brightness = <100>;
			initial-brightness = <0>;
		};

	};

	gpio-keys {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_front_keys>;

		start_button {
			label = "start_button";
			gpios = <&gpio3 3 GPIO_ACTIVE_LOW>;
			debounce-interval = <10>;
			linux,code = <102>; /* KEY_HOME */
		};

		stop_button {
			label = "stop_button";
			gpios = <&gpio3 4 GPIO_ACTIVE_LOW>;
			debounce-interval = <10>;
			linux,code = <119>; /* KEY_PAUSE */
		};

		power_button {
			label = "power_button";
			gpios = <&gpio3 5 GPIO_ACTIVE_LOW>;
			debounce-interval = <10>;
			linux,code = <113>; /* KEY_MUTE */
		};
	};
};

&clks {
	assigned-clocks = <&clks IMX6QDL_CLK_LDB_DI0_SEL>,
			  <&clks IMX6QDL_CLK_LDB_DI1_SEL>;
	assigned-clock-parents = <&clks IMX6QDL_CLK_PLL3_USB_OTG>,
				 <&clks IMX6QDL_CLK_PLL3_USB_OTG>;
};

&fec {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_enet>;
	phy-mode = "rgmii";
	interrupts-extended = <&gpio1 6 IRQ_TYPE_LEVEL_HIGH>,
			      <&intc 0 119 IRQ_TYPE_LEVEL_HIGH>;
	fsl,err006687-workaround-present;
	phy-handle = <&ethphy>;
	phy-reset-gpios = <&gpio1 25 GPIO_ACTIVE_LOW>;
	phy-reset-duration = <1>;
	txen-skew-ps = <0>;
	txc-skew-ps = <1680>;
	rxdv-skew-ps = <0>;
	rxc-skew-ps = <1680>;
	rxd0-skew-ps = <0>;
	rxd1-skew-ps = <0>;
	rxd2-skew-ps = <0>;
	rxd3-skew-ps = <0>;
	txd0-skew-ps = <0>;
	txd1-skew-ps = <0>;
	txd2-skew-ps = <0>;
	txd3-skew-ps = <0>;
	status = "okay";

	mdio {
		#address-cells = <1>;
		#size-cells = <0>;

		ethphy: ethernet-phy@0 {
			compatible = "ethernet-phy-id0022.1622", "ethernet-phy-ieee802.3-c22";
			reg = <0>;
			max-speed = <1000>;
			clock-frequency = <125000000>;
		};
	};
};

&i2c1 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c1>;
	status = "okay";

	codec: sgtl5000@0a {
		compatible = "fsl,sgtl5000";
		reg = <0x0a>;
		clocks = <&clks 201>;
		VDDD-supply = <&reg_1v3>;
		VDDA-supply = <&reg_3v3>;
		VDDIO-supply = <&reg_3v3>;
	};

};

&i2c2 {
	/* i2c2@HDMI */
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c2>;
	status = "okay";
};

&i2c3 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c3>;
	status = "okay";

        rtc_i2c: rtc@32 {
                compatible = "epson,rx8130";
                reg = <0x32>;
        };

        eeprom_i2c: at24@52 {
                compatible = "at24,24c256";
                pagesize = <32>;
                reg = <0x52>;
        };
};

&hdmi {
	pinctrl-names = "default";
	ddc-i2c-bus = <&i2c2>;
	status = "okay";
};

&audmux {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_audmux>;
	status = "okay";
};

&iomuxc {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_gpios>;

	imx6qdl-medix {
		pinctrl_enet: enetgrp {
			fsl,pins = <
				MX6QDL_PAD_ENET_MDIO__ENET_MDIO		0x1b0b0
				MX6QDL_PAD_ENET_MDC__ENET_MDC		0x1b0b0
				MX6QDL_PAD_RGMII_TXC__RGMII_TXC		0x1b0b0
				MX6QDL_PAD_RGMII_TD0__RGMII_TD0		0x1b0b0
				MX6QDL_PAD_RGMII_TD1__RGMII_TD1		0x1b0b0
				MX6QDL_PAD_RGMII_TD2__RGMII_TD2		0x1b0b0
				MX6QDL_PAD_RGMII_TD3__RGMII_TD3		0x1b0b0
				MX6QDL_PAD_RGMII_TX_CTL__RGMII_TX_CTL	0x1b0b0
				MX6QDL_PAD_ENET_REF_CLK__ENET_TX_CLK	0x1b0b0
				MX6QDL_PAD_RGMII_RXC__RGMII_RXC		0x1b0b0
				MX6QDL_PAD_RGMII_RD0__RGMII_RD0		0x1b0b0
				MX6QDL_PAD_RGMII_RD1__RGMII_RD1		0x1b0b0
				MX6QDL_PAD_RGMII_RD2__RGMII_RD2		0x1b0b0
				MX6QDL_PAD_RGMII_RD3__RGMII_RD3		0x1b0b0
				MX6QDL_PAD_RGMII_RX_CTL__RGMII_RX_CTL	0x1b0b0
				MX6QDL_PAD_ENET_CRS_DV__GPIO1_IO25	0x1b0b0 /* reset pin */
				MX6QDL_PAD_GPIO_6__ENET_IRQ		0x000b1 /* workaround for err006687 */
			>;
		};

		pinctrl_bkl: gpio_bkl {
			fsl,pins = <
				MX6QDL_PAD_EIM_DA13__GPIO3_IO13		0x130b0 /* PD */
				MX6QDL_PAD_ENET_TXD0__GPIO1_IO30	0x130b0 /* PD */
			>;
		};

		pinctrl_audmux: audmuxgrp {
			fsl,pins = <
				MX6QDL_PAD_CSI0_DAT4__AUD3_TXC			0x130b0
				MX6QDL_PAD_CSI0_DAT5__AUD3_TXD			0x110b0
				MX6QDL_PAD_CSI0_DAT6__AUD3_TXFS			0x130b0
				MX6QDL_PAD_CSI0_DAT7__AUD3_RXD			0x130b0
				/* SGTL5000 sys_mclk */
				MX6QDL_PAD_GPIO_0__CCM_CLKO1			0x03088
			>;
		};

		pinctrl_front_leds: gpio_front_leds {
			fsl,pins = <
				MX6QDL_PAD_EIM_DA6__GPIO3_IO06	0x130b0 /* FRONT_O1 PD */
				MX6QDL_PAD_EIM_DA7__GPIO3_IO07	0x130b0 /* FRONT_O2 PD */
				MX6QDL_PAD_EIM_DA8__GPIO3_IO08	0x130b0 /* FRONT_O3 PD */
			>;
		};

		pinctrl_front_keys: gpio_front_keys {
			fsl,pins = <
				MX6QDL_PAD_EIM_DA3__GPIO3_IO03	0x1b0b1 /* FRONT_I1 PU */
				MX6QDL_PAD_EIM_DA4__GPIO3_IO04	0x1b0b1 /* FRONT_I2 PU */
				MX6QDL_PAD_EIM_DA5__GPIO3_IO05	0x1b0b1 /* FRONT_I3 PU */
			>;
		};

		pinctrl_gpios: gpios1 {
			fsl,pins = <
				MX6QDL_PAD_DI0_PIN2__GPIO4_IO18		0x1b0b1 /* INTF_24_IN1 PU */
				MX6QDL_PAD_DI0_PIN3__GPIO4_IO19		0x1b0b1 /* INTF_24_IN2 PU */
				MX6QDL_PAD_DI0_PIN4__GPIO4_IO20		0x130b0 /* INTF_24_OUT1 PD */
				MX6QDL_PAD_CSI0_DAT12__GPIO5_IO30	0x130b0 /* SD_AUDIO_AMP PD */
				MX6QDL_PAD_CSI0_VSYNC__GPIO5_IO21	0x1b0b1 /* SWITCH PU */
				MX6QDL_PAD_GPIO_2__GPIO1_IO02		0x1b0b1 /* ENA_I2C2_EX PU */
			>;
		};

		pinctrl_i2c1: i2c1grp {
			fsl,pins = <
				MX6QDL_PAD_CSI0_DAT8__I2C1_SDA		0x4001b8b1
				MX6QDL_PAD_CSI0_DAT9__I2C1_SCL		0x4001b8b1
			>;
		};

		pinctrl_i2c2: i2c2grp {
			fsl,pins = <
				MX6QDL_PAD_KEY_ROW3__I2C2_SDA		0x4001b8b1
				MX6QDL_PAD_KEY_COL3__I2C2_SCL		0x4001b8b1
			>;
		};

		pinctrl_i2c3: i2c3grp {
			fsl,pins = <
				MX6QDL_PAD_EIM_D17__I2C3_SCL		0x4001b8b1
				MX6QDL_PAD_EIM_D18__I2C3_SDA		0x4001b8b1
			>;
		};

		pinctrl_pwm1: pwm1grp {
			fsl,pins = <
				MX6QDL_PAD_GPIO_9__PWM1_OUT		0x1b0b1
			>;
		};

		pinctrl_pwm_rgbstatus: rgbpwm {
			fsl,pins = <
				MX6QDL_PAD_SD1_DAT2__PWM2_OUT		0x1b0b1
				MX6QDL_PAD_SD1_DAT1__PWM3_OUT		0x1b0b1
				MX6QDL_PAD_SD1_CMD__PWM4_OUT		0x1b0b1
			>;
		};

		pinctrl_uart1: uart1grp {
			fsl,pins = <
				MX6QDL_PAD_CSI0_DAT10__UART1_TX_DATA	0x1b0b1
				MX6QDL_PAD_CSI0_DAT11__UART1_RX_DATA	0x1b0b1
			>;
		};

		pinctrl_uart2: uart2grp {
			fsl,pins = <
				MX6QDL_PAD_SD3_DAT4__UART2_RX_DATA	0x1b0b1
				MX6QDL_PAD_SD3_DAT5__UART2_TX_DATA	0x1b0b1
			>;
		};

		pinctrl_uart3: uart3grp {
			fsl,pins = <
				MX6QDL_PAD_EIM_D24__UART3_TX_DATA	0x1b0b1
				MX6QDL_PAD_EIM_D25__UART3_RX_DATA	0x1b0b1
			>;
		};

		pinctrl_uart4: uart4grp {
			fsl,pins = <
				MX6QDL_PAD_KEY_COL0__UART4_TX_DATA	0x1b0b1
				MX6QDL_PAD_KEY_ROW0__UART4_RX_DATA	0x1b0b1
			>;
		};

		pinctrl_usbotg: usbotggrp {
			fsl,pins = <
				MX6QDL_PAD_ENET_RX_ER__USB_OTG_ID	0x17059
			>;
		};

		pinctrl_usbhub_reset: usbhub_reset {
			fsl,pins = <
				MX6QDL_PAD_GPIO_5__GPIO1_IO05		0x130b0 /* PD */
			>;
		};

		pinctrl_usdhc4: usdhc4grp {
			fsl,pins = <
				MX6QDL_PAD_SD4_CMD__SD4_CMD		0x17059
				MX6QDL_PAD_SD4_CLK__SD4_CLK		0x10059
				MX6QDL_PAD_SD4_DAT0__SD4_DATA0		0x17059
				MX6QDL_PAD_SD4_DAT1__SD4_DATA1		0x17059
				MX6QDL_PAD_SD4_DAT2__SD4_DATA2		0x17059
				MX6QDL_PAD_SD4_DAT3__SD4_DATA3		0x17059
				MX6QDL_PAD_SD4_DAT4__SD4_DATA4		0x17059
				MX6QDL_PAD_SD4_DAT5__SD4_DATA5		0x17059
				MX6QDL_PAD_SD4_DAT6__SD4_DATA6		0x17059
				MX6QDL_PAD_SD4_DAT7__SD4_DATA7		0x17059
				MX6QDL_PAD_NANDF_ALE__SD4_RESET		0x17059
			>;
		};

		pinctrl_flexcan2: can2grp {
			fsl,pins = <
				MX6QDL_PAD_SD3_DAT0__FLEXCAN2_TX	0x1b0b0
				MX6QDL_PAD_SD3_DAT1__FLEXCAN2_RX	0x1b0b0
			>;
		};
	};
};

&ldb {
	status = "okay";

	lvds-channel@0 {
		fsl,data-mapping = "spwg";
		fsl,data-width = <18>;
		status = "okay";

		port@4 {
			reg = <4>;

			lvds0_out: endpoint {
				remote-endpoint = <&panel_in>;
			};
		};
	};
};

&pwm1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pwm1>;
	status = "okay";
};

&pwm2 {
	status = "okay";
};

&pwm3 {
	status = "okay";
};

&pwm4 {
	status = "okay";
};

&snvs_poweroff {
	status = "okay";
};

&ssi2 {
	fsl,mode = "i2s-slave";
	status = "okay";
};

&can2 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_flexcan2>;
	status = "okay";
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart1>;
	status = "okay";
};

&uart2 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart2>;
	status = "okay";
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart3>;
	status = "okay";
};

&uart4 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart4>;
	status = "okay";
};

&usbh1 {
	vbus-supply = <&reg_usb_h1_vbus>;
	status = "okay";
};

&usbotg {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usbotg>;
	disable-over-current;
	srp-disable;
	hnp-disable;
	adp-disable;
	status = "okay";
};

&usdhc4 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_usdhc4>;
	bus-width = <8>;
	non-removable;
	no-1-8-v;
	keep-power-in-suspend;
	status = "okay";
};

&wdog1 {
	status = "okay";
};

&wdog2 {
	status = "disabled";
};
